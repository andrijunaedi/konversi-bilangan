{
  "name": "konversi-bilangan",
  "version": "1.0.0",
  "description": "Konversi bilangan binary, octal, decimal dan hexadecimal",
  "main": "./dist/index.js",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.modern.mjs"
  },
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsnd ./src/index.ts",
    "build": "microbundle src/index.ts",
    "lint": "eslint src --ext .js,.ts",
    "test": "jest --config jest.config.js --coverage",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrijunaedi/konversi-bilangan.git"
  },
  "keywords": [
    "node",
    "convert",
    "typescript"
  ],
  "author": "Andri Junaedi <andrijunaedi126@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrijunaedi/konversi-bilangan/issues"
  },
  "homepage": "https://github.com/andrijunaedi/konversi-bilangan#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "microbundle": "^0.14.2",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {}
}
